pipeline {
  agent any

  environment {

  }

  stages {
    stage('Checkout Code') {
      steps {
        script {
          checkout([
            $class: 'GitSCM',
              dir('FMCAutomation01') {
                    git branch: 'main',
                        credentialsId: 'Mykey',   // NEW SSH KEY
                        url: 'git@github.com:PushkarSAshtekar/TestJenkins.git'   // SSH URL
              }
          ])
        }
      }
    }

    stage('Setup Node.js') {
      steps {
        bat '''
          node -v || echo "Node.js should be installed manually on Windows agent"
          npm -v || echo "npm should be installed manually on Windows agent"
        '''
      }
    }

    stage('Install Dependencies') {
      steps {
        bat 'npm ci || npm install'
      }
    }

    stage('Run Playwright Tests') {
      steps {
        bat 'npx playwright install --with-deps'
        bat 'npx playwright test'
      }
    }

    stage('Post Build') {
      steps {
        echo "✅ Build and Test completed successfully!"
      }
    }
  }

  post {
    failure {
      echo "❌ Build failed. Check logs for errors."
    }
    always {
      echo "Pipeline finished."
    }
  }
}
